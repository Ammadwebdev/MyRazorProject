@model Product

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>



<form asp-action="ClearTitle" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />

    <div class="border p-3 mt-4">
        <h2 class="text-danger">Clear Title</h2>
        <hr />

        <div class="mb-3 row p-1">
            <label asp-for="Title" class="p-0"></label>
            <input asp-for="Title" class="form-control" readonly />
        </div>


        <div class="mb-3 row p-1">
            <label asp-for="Description" class="p-0"></label>
            <input asp-for="Description" class="form-control" readonly />
        </div>

        <div class="row">
            <div class="col-6">
                <button type="submit" class="btn btn-danger" style="width:150px">Clear Data</button>
          
            
            </div>
            <div class="col-6">
                <a asp-controller="Category" asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </div>
    </div>
</form>
