@model List<Product>


<div class="container">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary"></h2>
            Product List
        </div>

        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i>          Create a New Product

            </a>

        </div>




    </div>


</div>

<h1> List of SBD Product list</h1>





<h1>Product List</h1>



<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Category Title</th>
            <th>Description</th>
            <th>ISBN</th>
            <th>Author</th>
            <th>List Price</th>
            <th>Price 50  </th>
            <th>Price 50 plus</th>
            <th>Price 100 plus</th>
        </tr>

    </thead>

    <tbody>

        @foreach (var obj in Model)
        {
            <tr>
                <td>@obj.Title</td>
                <td>@obj.Description</td>
                <td>@obj.ISBN</td>
                <td>@obj.Author</td>
                <td>@obj.ListPrice</td>
                <td>@obj.Price</td>
                <td>@obj.Price50</td>
                <td>@obj.Price100</td>
                <td>
                  

                    <div class="w-75 btn-group" role="group">
    <a asp-controller="Product" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
        <i class="bi bi-pencil-square"></i> Edit
    </a>

    <a asp-controller="Product" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
        <i class="bi bi-trash"></i> Delete
    </a>

    <form asp-controller="Product" asp-action="ClearTitle" asp-route-id="@obj.Id" method="post" style="display:inline;">
        @Html.AntiForgeryToken()
        <button type="submit" class="btn btn-danger mx-2" style="white-space: nowrap;">
            <i class="bi bi-trash"></i> Clear Title
        </button>
    </form>
</div>


                </td>
            </tr>
        }


    </tbody>

</table>